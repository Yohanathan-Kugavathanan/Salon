<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".MainHairCut2Details">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="352dp"
        android:layout_height="85dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/open_sans_semibold"
        android:text="HardPart and SkinFade Cut"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="275dp"
        android:layout_height="230dp"
        android:layout_marginTop="28dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/v1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="387dp"
        android:layout_height="267dp"
        android:layout_marginTop="44dp"
        android:background="#FFFFFF"
        android:text="Description:-                                                                            The best collection of New Trend High Fade Haircut Styles, Latest and best High Fade Haircut trends for Mens Hairstyles 2018"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="376dp"
        android:layout_height="60dp"
        android:background="@color/common_google_signin_btn_text_dark_pressed"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Price:-1400/="
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />


</androidx.constraintlayout.widget.ConstraintLayout>