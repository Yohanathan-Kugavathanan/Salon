<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@color/grayLight"
    android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="350dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/gradientbackground"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/salon"
                android:textSize="60sp"
                android:textStyle="italic"
                android:fontFamily="@font/allerta"
                android:textAlignment="center"
                android:layout_gravity="center"

                />

            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/ic_content_cut_black_24dp"
                />

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
            <!--<ImageButton
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:background="@drawable/ic_cust_black_24dp"
                android:src="@drawable/click_home_screen_btn">


               </ImageButton > -->
                <TextView
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Login"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:background="@color/greyishGreen"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                 />
                <EditText
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Username"
                    android:textSize="20sp"
                    android:textFontWeight="0"
                    android:textAlignment="center"
                    android:textColor="#aaaa"

                    />


                <EditText
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Password"
                    android:textSize="20sp"
                    android:textFontWeight="0"
                    android:textAlignment="center"
                    android:textColor="#aaaa"
                    />
                <Button
                    android:layout_width="350dp"
                    android:layout_height="25dp"
                    android:background="#ffffff"
                    android:text="Forgot_Password?"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/red"
                    android:layout_gravity="center"/>

               <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text=" Create new Account? Click here "
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:background="@color/startBlue"
                   android:textColorLink="@color/midBlue"

                    />






    </LinearLayout>




    </LinearLayout>
